@import '../var.styl'
@import 'main.styl'

make-alert(type) {
  t = unquote(type)
  token = 1
  color-token = 6
  prefix = '.sui-alert'

  background-color: typesMap[t][token]

  {prefix}__wrapper {
    {prefix}__icon {
      color: typesMap[t][color-token]
    }
  }

  {prefix}__close-btn:focus {
    ring(typesMap[t][color-token])
    background-color: typesMap[t][token]
    color: typesMap[t][color-token]
  }
}