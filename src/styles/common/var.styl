// colors
color--placeholder = #a0a3bd
color--border = #d9dbe9

color--primary = #2258e3
color--success = #06ba63
color--error = #E63333
color--warning = #FFBE4D

colors--primary = {
  _100: #e6f0ff,
  _200: #a1c5ff,
  _300: #77a5fc,
  _400: #4a7ff0,
  _500: #2258e3,
  _600: #133dbd,
  _700: #082696,
  _800: #001570,
  _900: #000b4a
}

colors--success = {
  _100: #d5eddf,
  _200: #72e0a0,
  _300: #4ad488,
  _400: #26c774,
  _500: #06ba63,
  _600: #009451,
  _700: #006e40,
  _800: #00472c,
  _900: #002116
}

colors--error = {
  _100: #ffe9e6,
  _200: #ffbab3,
  _300: #ff928a,
  _400: #f2615c,
  _500: #e63333,
  _600: #bf2126,
  _700: #99121b,
  _800: #730813,
  _900: #4d050e
}

colors--warning = {
  _100: #fffbf0,
  _200: #fff0c7,
  _300: #ffe29e,
  _400: #ffd175,
  _500: #ffbe4d,
  _600: #d99836,
  _700: #b37524,
  _800: #8c5515,
  _900: #663a0e
}

colors--text = {
  normal: #222B45,
  secondary: #8F9BB3,
  disabled: rgba(#8F9BB3, 0.5),
  vert: #f7f7fc
}

colors--surface = {
  disabled: #f6f5fa,
  dark: #e8e8e8,
  normal: #EDF1F7,
}

colors--neutral = {
  normal: #222b45,
  light: #8f9bb3,
  lightTransparent: rgba(#8f9bb3, 0.5),
  lighter: #f6f5fa,

}

typesMap = {
  'default': colors--primary,
  'success': colors--success,
  'warning': colors--warning,
  'error': colors--error
}

// typography
font-size--display = {
  larger: 48px,
  large: 36px,
  medium: 24px,
  small: 22px
}

font-size--text = {
  larger: 18px,
  large: 16px,
  medium: 14px,
  small: 12px,
}

font-family = -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
        'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
        'Noto Color Emoji'

border-radius--normal = 4px
border-radius--large = 8px

box-shadow--normal = 0 4px 8px rgba(0, 0, 0, 16%)

box-shadow--elevation = 0 3px 6px -4px rgba(0, 0, 0, 12%), 0 6px 16px 0 rgba(0, 0, 0, 8%), 0 9px 28px 8px rgba(0, 0, 0, 5%)
box-shadow--primary = 0 0 0 0.25rem rgba(colors--surface.normal, 1)
