.sui-slider {
  &__track {
    width 100%
    height 8px
    margin 16px 0
    background-color: color--bg.normal
    border-radius 4px
    position relative
    cursor pointer
    vertical-align middle
  }

  &__bar {
    background-color color--primary.normal
    height 6px
    border-top-left-radius 3px
    border-bottom-left-radius 3px
    position absolute
  }

  &__handle-wrapper {
    height 32px
    width @height
    position absolute
    z-index 1
    user-select none
    top -14px
    transform translateX(-50%)
    display flex
    align-items center
    justify-content center

    ^[0]__handle {
      display inline-block
      width 24px
      height @width
      border-radius 50%
      vertical-align middle
      background-color #ffffff
      border 2px solid color--primary.normal
      box-sizing border-box
      user-select none
      transition all .3s

      &.is-dragging, &.is-hovering {
        box-shadow 0 0 0 0.25rem rgba(color--primary.light, 0.25)
      }
    }
  }

  // disabled
  &.is-disabled {
    & ^[0]__track {
      cursor default
    }
    & ^[0]__bar {
      background-color color--placeholder
    }

    & ^[0]__handle {
      border-color color--placeholder
      box-shadow none !important
      cursor not-allowed
    }
  }

  // vertical
  &.is-vertical {
    display inline-block
    & ^[0]__track {
      width 8px
      margin 0 16px
      height 100%
    }

    & ^[0]__handle-wrapper {
      top auto
      left -12px
      transform translateY(50%)
    }

    & ^[0]__bar {
      width 8px
      border-radius 0 0 4px 4px
    }
  }
}
