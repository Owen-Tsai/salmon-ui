.sui-progress.is-circular,
.sui-progress.is-dashboard {
  display inline-block
}

.sui-progress__info {
  min-width 48px
  font-size font-size--text.medium
  color colors--text.normal
}

.sui-progress--linear {
  display flex
  align-items center

  .sui-progress__bar {
    height 8px
    flex-grow 1
    position relative

    .sui-progress__track {
      height 100%
      border-radius border-radius--normal
      background-color colors--surface.dark
    }
    .sui-progress__fill {
      position absolute
      left 0
      top 0
      height 100%
      border-radius border-radius--normal
      background-color colors--primary.normal
      transition all .3s
    }
  }

  &.is-active {
    .sui-progress__fill {
      &::after {
        content ''
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        background-color #ffffff
        opacity 0
        border-radius border-radius--normal
        animation progress-active 3s cubic-bezier(.23,1,.32,1) infinite
      }
    }
  }

  .sui-progress__info {
    margin-left 8px
  }
}

.sui-progress--circular, .sui-progress--dashboard {
  position relative

  .sui-progress__info {
    position absolute
    left 0
    top 50%
    width 100%
    text-align center
    transform translateY(-50%)
  }
}

@keyframes progress-active {
  0% {
    width: 0;
    opacity: 0.1;
  }
  20% {
    width: 0;
    opacity: 0.6;
  }
  100% {
    width: 100%;
    opacity: 0;
  }
}
