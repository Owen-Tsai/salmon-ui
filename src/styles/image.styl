.sui-image {
  display inline-block
  overflow hidden
  position relative

  &__img,
  &__error, &__placeholder {
    vertical-align middle
    width 100%
    height 100%
  }

  &__error, &__placeholder {
    display flex
    align-items center
    justify-content center
    background-color color--bg.normal
    color color--placeholder
    font-size font-size--text.medium
  }

  &__img.is-clickable {
    cursor pointer
  }
}
